@model USAtoBrazil.Services.Identity.MainModule.Account.RegisterViewModel

<div class="login-page">
    <div class="lead">
        <h1>Register</h1>
        <p>Choose how to register</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Local Account Register</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label">First Name</label>
                                    <input class="form-control" type="text" asp-for="FirstName" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label">Last Name</label>
                                    <input class="form-control" type="text" asp-for="LastName" placeholder="">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Address1" class="form-label">Address</label>
                                    <input class="form-control" type="text" asp-for="Address1" placeholder="">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Address2" class="form-label">Address 2</label>
                                    <input class="form-control" type="text" asp-for="Address2" placeholder="">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Region" class="form-label">Region</label>
                                    <input class="form-control" type="text" asp-for="Region" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="City" class="form-label">City</label>
                                    <input class="form-control" type="text" asp-for="City" placeholder="">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="State" class="form-label">State</label>
                                    <input class="form-control" type="text" asp-for="State" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="CEP" class="form-label">CEP</label>
                                    <input class="form-control" type="text" asp-for="CEP" placeholder="">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input class="form-control" asp-for="Email" placeholder="">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Phone" class="form-label">Phone</label>
                                    <input class="form-control" type="text" asp-for="Phone" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="CPF" class="form-label">CPF</label>
                                    <input class="form-control" type="text" asp-for="CPF" placeholder="">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input class="form-control" type="text" asp-for="Password" placeholder="" autocomplete="off">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="" class="form-label">Confirm Password</label>
                                    <input class="form-control" name="" type="password" value="" placeholder="">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="RoleName"></label>
                                <select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(ViewBag.message))"></select>
                            </div>
                        </div>
                        <button class="btn btn-primary" name="button" value="Register">Register</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>

                       @*  <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" placeholder="email" asp-for="Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input class="form-control" placeholder="first name" asp-for="FirstName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input class="form-control" placeholder="lastname" asp-for="LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleName"></label>
                            <select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(ViewBag.message))"></select>
                        </div>
                        <button class="btn btn-primary" name="button" value="Register">Register</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button> *@
                    </form>



                    





                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Login",new {Model.ReturnUrl })">Login</a>
                </div>
            </div>
        </div>


    </div>
</div>